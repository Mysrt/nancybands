#main
  .page-header
    %h1 Bands

  %ul.thumbnails
    - @bands.each do |band|
      %li.span3
        .thumbnail
          = link_to image_tag(band.image_url(:thumb)), band
          %h3= band.name
          = link_to 'buy', edit_band_path(band), :class => 'btn btn-primary'
          = link_to 'edit', edit_band_path(band), :class => 'btn btn'
          = link_to 'remove', band_path(band), :method => 'delete', :class => 'btn btn-danger'
  = link_to 'New Band', new_band_path, :class => 'btn btn-primary btn-large'
